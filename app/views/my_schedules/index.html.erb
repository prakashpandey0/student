<p id="notice"><%= notice %></p>

<h1>My Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Subjects</th>
      <th>Start time</th>
      
      <th>Duration</th>
      <th>Date</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_schedules.each do |my_schedule| %>
      <tr>
        <td><%= my_schedule.course_name %></td>
        <td><%= my_schedule.subjects %></td>
        <td><%= my_schedule.start_time %></td>
        
        <td><%= my_schedule.duration %></td>
        <td><%= my_schedule.date %></td>
        
        <td><%= link_to 'Reschedule', edit_my_schedule_path(my_schedule) %></td>
        <td><%= link_to 'Cancel calss', my_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New My Schedule', new_my_schedule_path %></button>
