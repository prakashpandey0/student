<p id="notice"><%= notice %></p>

<h1>My Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Contact no</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.each do |students| %>
      <tr>
        <td><%= students.name %></td>
        
        
        <td><%= students.student_class_name%></td>
        <td><%= students.contact_no %></td>
        <td><%= link_to 'Show', students %></td>
        <td><%= link_to 'update', edit_student_path(students) %></td>
        <td><%= link_to 'delete', students, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

