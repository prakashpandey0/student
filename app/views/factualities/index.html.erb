<p id="notice"><%= notice %></p>

<h1>Factualities</h1>

<table>
  <thead>
    <tr>
      <th>Teachers name</th>
      <th>Mobile no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factualities.each do |factuality| %>
      <tr>
        <td><%= factuality.teachers_name %></td>
        <td><%= factuality.mobile_no %></td>
        <td><%= link_to 'Show', factuality %></td>
        <td><%= link_to 'Edit', edit_factuality_path(factuality) %></td>
        <td><%= link_to 'Destroy', factuality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

