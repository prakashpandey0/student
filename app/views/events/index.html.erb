<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event tiltle</th>
      <th>Event type</th>
      <th>Select class</th>
      <th>Select day</th>
      
      <th>Event duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_tiltle %></td>
        <td><%= event.event_type %></td>
        <select>
        <td><%= select_tag "select_class", options_from_collection_for_select(Event.all, "id", "select_class") %></td>
        </select>
        <td><%= event.select_day %></td>
        
        <td><%= event.event_duration %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

